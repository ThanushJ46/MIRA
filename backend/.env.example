PORT=5000

# MongoDB Connection
# For local MongoDB (requires MongoDB installed):
# MONGO_URI=mongodb://localhost:27017/meeting-assistant

# For MongoDB Atlas (cloud - recommended):
# Get your connection string from MongoDB Atlas dashboard
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/meeting-assistant?retryWrites=true&w=majority

# JWT Secret (use a strong random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars

# OpenAI API Key for AI-powered journal analysis
# Get your API key from: https://platform.openai.com/api-keys
# If not provided, will fall back to simple keyword-based analysis
OPENAI_API_KEY=your_openai_api_key_here

# Future integrations (not implemented yet)
# GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id_here
# GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret_here
